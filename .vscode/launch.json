    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run codelab (count)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/privacy-on-beam/codelab/main",
            "cwd": "${workspaceFolder}/privacy-on-beam/codelab",
            "args": [
                "--example=count",
                "--input_file=main/day_data.csv",
                "--output_stats_file=stats.csv",
                "--output_chart_file=chart.png",
                "-v=1",
                "--alsologtostderr"
            ],
            "buildFlags": "--mod=mod"
        }
    ]
}